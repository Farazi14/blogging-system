<div class="container_local">
        <div id="content_local">
            {{#if message}}
                <h3 class="mt-4"><strong>{{message}}</strong></h3>
            {{/if}}
           <h2 class="mt-4 font-color">Log in</h2>
            <form action="./login" method="POST">
                    <label for="txtUsername">Username:</label>
                    <p class="form_input_local"><input type="text" name="username" id="txtUsername" required></p>
                    <label for="txtPassword">Password:</label>
                    <p class="form_input_local"><input type="password" name="password" id="txtPassword" required></p>
                    <p><a href="/newUser">Create new account</a> </p>
                    <button class="btn btn-success mt-2" type="submit">Log in</button>
            </form>
        </div>
</div>