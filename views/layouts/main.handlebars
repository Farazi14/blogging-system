<body>
        <div id="header_local">
            <div id="left-group">
                <h1> Welcome to yourBlog </h1>
                <nav>
                    {{#if (or validUser existingUser)}}<a href="./" {{#if homepage}} class = "activeLink"{{/if}}>Home</a>{{/if}}
                    {{#if (or validUser existingUser)}}<a href="./postArticle" {{#if postArticle}} class = "activeLink" {{/if}} >Post Article</a>{{/if}}
