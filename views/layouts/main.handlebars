                </nav>
            </div>
            <div id="right-group">
                {{#if (or validUser existingUser)}}<a href="/logout"><img src="../images/off_button.png"></a>
                    {{else}}
                    {{#unless onLoginPage}}
                        <a id ="login" href="/login">Login</a>
